\put(6,1.5){\weerstandnormalflip{$R_u$}}%
\put(1,0.0){\line(1,0){5}}%
\put(1.0,0.0){\line(0,1){0.5}}%
\put(6.0,0.0){\line(0,1){0.5}}%
